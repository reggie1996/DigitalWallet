<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小吴"
                android:padding="10dp"
                android:textSize="20dp"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/colorGray"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:paddingTop="6dp"
                    android:paddingLeft="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/test"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#666666"
                    android:layout_marginBottom="6dp" />
                <com.github.library.bubbleview.BubbleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最近区块链技术好像挺火的诶"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    app:arrowWidth="8dp"
                    app:angle="8dp"
                    app:arrowHeight="10dp"
                    app:arrowPosition="14dp"
                    app:arrowLocation="left"
                    app:arrowCenter="true"
                    app:bubbleColor="#7EC0EE"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:paddingTop="6dp"
                android:paddingLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/test"
                app:civ_border_width="0dp"
                app:civ_border_color="#666666"
                android:layout_marginBottom="6dp" />
            <com.github.library.bubbleview.BubbleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="感觉好厉害"
                android:padding="10dp"
                android:textColor="@android:color/white"
                app:arrowWidth="8dp"
                app:angle="8dp"
                app:arrowHeight="10dp"
                app:arrowPosition="14dp"
                app:arrowLocation="left"
                app:arrowCenter="true"
                app:bubbleColor="#7EC0EE"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:paddingTop="6dp"
                    android:paddingLeft="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/test"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#666666"
                    android:layout_marginBottom="6dp" />
                <com.github.library.bubbleview.BubbleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我还买了几个虚拟货币"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    app:arrowWidth="8dp"
                    app:angle="8dp"
                    app:arrowHeight="10dp"
                    app:arrowPosition="14dp"
                    app:arrowLocation="left"
                    app:arrowCenter="true"
                    app:bubbleColor="#7EC0EE"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <com.github.library.bubbleview.BubbleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="哇 那你不是很棒棒"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    app:arrowWidth="8dp"
                    app:angle="8dp"
                    app:arrowHeight="10dp"
                    app:arrowPosition="14dp"
                    app:arrowLocation="right"
                    app:arrowCenter="true"
                    app:bubbleColor="#7EC0EE"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/conversation_text_self"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:paddingTop="6dp"
                    android:paddingRight="20dp"
                    android:id="@+id/conversation_portrait_self"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/profile_image"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#666666"
                    android:layout_marginBottom="6dp" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:paddingTop="6dp"
                    android:paddingLeft="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/test"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#666666"
                    android:layout_marginBottom="6dp" />
                <com.github.library.bubbleview.BubbleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我当然棒了"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    app:arrowWidth="8dp"
                    app:angle="8dp"
                    app:arrowHeight="10dp"
                    app:arrowPosition="14dp"
                    app:arrowLocation="left"
                    app:arrowCenter="true"
                    app:bubbleColor="#7EC0EE"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_first"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <com.github.library.bubbleview.BubbleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="早上好啊"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    app:arrowWidth="8dp"
                    app:angle="8dp"
                    app:arrowHeight="10dp"
                    app:arrowPosition="14dp"
                    app:arrowLocation="right"
                    app:arrowCenter="true"
                    app:bubbleColor="#7EC0EE"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:paddingTop="6dp"
                    android:paddingRight="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/profile_image"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#666666"
                    android:layout_marginBottom="6dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_sec"
                android:visibility="gone"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:paddingTop="6dp"
                    android:paddingLeft="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/test"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#666666"
                    android:layout_marginBottom="6dp" />
                <com.github.library.bubbleview.BubbleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="早啊"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    app:arrowWidth="8dp"
                    app:angle="8dp"
                    app:arrowHeight="10dp"
                    app:arrowPosition="14dp"
                    app:arrowLocation="left"
                    app:arrowCenter="true"
                    app:bubbleColor="#7EC0EE"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/colorGray"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_smile"
                    android:layout_margin="10dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_more"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/et_message"
                    android:layout_width="200dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发送"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</ScrollView>
