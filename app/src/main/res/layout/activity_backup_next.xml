<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="助记词备份"
            android:textColor="@color/colorGold1"
            android:textSize="16dp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:background="@color/colorGray"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="确认你的钱包助记词"
        android:textSize="15dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请按顺序点击助记词，以确认你的备份助记词正确。"
        android:gravity="center"
        android:textSize="13dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:background="#eeeeee">


        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="28dp"
            android:text="notable"
            android:background="@color/white"
            android:padding="5dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView23"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/textView23"
            android:text="jealous"
            android:background="@color/white"
            android:padding="5dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView24"
            android:layout_alignBottom="@+id/textView24"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@+id/textView28"
            android:text="courve"
            android:background="@color/white"
            android:padding="5dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView25"
            android:layout_alignBottom="@+id/textView25"
            android:layout_alignEnd="@+id/textView30"
            android:background="@color/white"
            android:padding="5dp"
            android:text="work"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView23"
            android:layout_centerVertical="true"
            android:text="critic"
            android:background="@color/white"
            android:padding="5dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView27"
            android:layout_alignBottom="@+id/textView27"
            android:layout_toEndOf="@+id/textView23"
            android:background="@color/white"
            android:padding="5dp"
            android:text="country"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView28"
            android:layout_alignBottom="@+id/textView28"
            android:layout_toEndOf="@+id/textView24"
            android:text="duty"
            android:background="@color/white"
            android:padding="5dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView34"
            android:layout_alignBottom="@+id/textView34"
            android:layout_toEndOf="@+id/textView25"
            android:background="@color/white"
            android:padding="5dp"
            android:text="expand"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView29"
            android:layout_alignBottom="@+id/textView29"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/textView29"
            android:text="tomato"
            android:background="@color/white"
            android:padding="5dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView33"
            android:layout_alignBottom="@+id/textView33"
            android:layout_alignStart="@+id/textView27"
            android:text="live"
            android:background="@color/white"
            android:padding="5dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView30"
            android:layout_alignBottom="@+id/textView30"
            android:layout_alignStart="@+id/textView28"
            android:text="setup"
            android:background="@color/white"
            android:padding="5dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView29"
            android:layout_below="@+id/textView29"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:padding="5dp"
            android:text="theory"
            android:visibility="invisible"/>
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:columnCount="4">

        <TextView
            android:id="@+id/setup"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:text="setup"
            android:gravity="center"
            android:background="#eeeeeeee"/>
        <TextView
            android:id="@+id/critic"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:text="critic"
            android:gravity="center"
            android:background="#eeeeeeee"/>
        <TextView
            android:id="@+id/country"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:text="country"
            android:gravity="center"
            android:background="#eeeeeeee"/>
        <TextView
            android:id="@+id/notable"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:text="notable"
            android:gravity="center"
            android:background="#eeeeeeee"/>
        <TextView
            android:id="@+id/duty"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:text="duty"
            android:gravity="center"
            android:background="#eeeeeeee"/>
        <TextView
            android:id="@+id/tomato"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:text="tomato"
            android:gravity="center"
            android:background="#eeeeeeee"/>
        <TextView
            android:id="@+id/work"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:text="work"
            android:gravity="center"
            android:background="#eeeeeeee"/>
        <TextView
            android:id="@+id/curve"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:text="curve"
            android:gravity="center"
            android:background="#eeeeeeee"/>
        <TextView
            android:id="@+id/theory"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:text="theory"
            android:gravity="center"
            android:background="#eeeeeeee"/>
        <TextView
            android:id="@+id/expand"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:text="expand"
            android:gravity="center"
            android:background="#eeeeeeee"/>
       <TextView
           android:id="@+id/jealous"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:text="jealous"
            android:gravity="center"
            android:background="#eeeeeeee"/>
        <TextView
            android:id="@+id/live"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:text="live"
            android:gravity="center"
            android:background="#eeeeeeee"/>

    </GridLayout>

    <Button
        android:id="@+id/bt_next"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="确认"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/colorGold1"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

</LinearLayout>
